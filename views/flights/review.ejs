<% layout("layouts/boilerplate") %>

<div>
	<div class="row">

		<div class="col-8">
			<div class="card review-card">
				<div class="card-header"><h2>Itinerary</h2></div>
				
				<div class="card-body">
					<h2>
						<div class="row">
							<div class="col">
								<%= detail.from %> - <%= detail.to %>						
							</div>	
							<div class="col" style="text-align: center;">

							</div>
							<div class="col" style="text-align: right;">
								<%= detail.date %>
							</div>	
						</div>	
					</h2>
					<hr>
					<h2 class="card-title">
						<div class="row">
							<div class="col">
								<%= detail.airline %>			
							</div>	
							<div class="col" style="text-align: center;">
								<%= detail.fromTime %><span class="fas fa-plane plane"></span><%= detail.toTime %>
							</div>
							<div class="col" style="text-align: right;">
								<%= detail.group %>
							</div>	
						</div>	    
					</h2>
					<hr>
					<% if (detail.passengerCount > 1) { %>
						<h5>Travellers : <%= detail.passengerCount %></h5>
					<% } else { %>
						<h5>Traveller : <%= detail.passengerCount %></h5>				
					<% } %> 
					<h5>Baggage : 15kg + 7kg</h5>
					<form action="/review" method="post">
						<input type="hidden" name="detail" value="<%= JSON.stringify(detail) %>" />
					<div class="card-footer text-center">
						<button type="submit" class="btn btn-dark" style="width: 15rem; height: 3rem; line-height: 2rem;">CONFIRM</button>
					</div>
				</form>
				</div>
			</div>
		</div>

		<div class="col-4">
			<div class="card fare-card">
				<div class="card-header"><h2>Fare Summary</h2></div>
				<div class="card-body">
					<h4>
						<div class="row">
							<div class="col-8">
								Base Fare
							</div>	
							<div class="col-4" style="text-align: right;">
								₹<%= detail.price - 489 %>
							</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-8">
								Fee & Taxes
							</div>	
							<div class="col-4" style="text-align: right;">
								₹420
							</div>
						</div>
						<hr>
						<div class="row">
							<div class="col-8">
								Other Charges				
							</div>	
							<div class="col-4" style="text-align: right;">
								₹69
							</div>
						</div>
					</h4>
				</div>
				<div class="card-footer">
					<h2>
						<div class="row">
							<div class="col">
								Total Fare				
							</div>	
							<div class="col" style="text-align: right;">
								₹<%= detail.price %>
							</div>
						</div>
					</h2>
				</div>
			</div>
		</div>

	</div>
</div>